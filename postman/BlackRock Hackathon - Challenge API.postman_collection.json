      "name": "Transactions",
      "item": [
        {
          "name": "POST transactions:parse",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// 1. Validate Status Code",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "// 2. Validate Response Structure and Data Accuracy",
                  "pm.test(\"Transaction mapping and rounding logic are correct\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    ",
                  "    pm.expect(jsonData).to.be.an('array');",
                  "",
                  "    jsonData.forEach((transaction, index) => {",
                  "        // Validate Data Types",
                  "        pm.expect(transaction.date).to.be.a('string');",
                  "        pm.expect(transaction.amount).to.be.a('number');",
                  "        pm.expect(transaction.ceiling).to.be.a('number');",
                  "        pm.expect(transaction.remanent).to.be.a('number');",
                  "",
                  "        // Validate Business Logic: Rounding up to the NEXT multiple of 100",
                  "        // Logic: If amount is 250, next is 300. If 200, next is 300.",
                  "        let amount = transaction.amount;",
                  "        let expectedCeiling = (Math.floor(amount / 100) + 1) * 100;",
                  "        ",
                  "        pm.expect(transaction.ceiling).to.eql(expectedCeiling, `Ceiling mismatch at index ${index}`);",
                  "",
                  "        // Validate Business Logic: Remanent Calculation",
                  "        let expectedRemanent = Number((expectedCeiling - amount).toFixed(2));",
                  "        pm.expect(transaction.remanent).to.eql(expectedRemanent, `Remanent mismatch at index ${index}`);",
                  "    });",
                  "});",
                  "",
                  "// 3. Validate Date Format (YYYY-MM-DD HH:mm:ss)",
                  "pm.test(\"Date format is valid\", function () {",
                  "    const jsonData = pm.response.json();",
                  "    // Strict regex for YYYY-MM-DD HH:mm:ss",
                  "    const dateRegex = /^\\d{4}-\\d{2}-\\d{2} \\d{2}:\\d{2}:\\d{2}$/;",
                  "    ",
                  "    jsonData.forEach((transaction) => {",
                  "        pm.expect(transaction.date).to.match(dateRegex, `Invalid date format: ${transaction.date}`);",
                  "    });",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Accept",
                "value": "application/json"
