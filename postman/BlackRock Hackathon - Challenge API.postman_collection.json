        {
          "name": "POST transactions:validator",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// 1. Basic Status and Structure Validation",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const jsonData = pm.response.json();",
                  "",
                  "pm.test(\"Response has required valid and invalid lists\", function () {",
                  "    pm.expect(jsonData).to.have.property('valid').that.is.an('array');",
                  "    pm.expect(jsonData).to.have.property('invalid').that.is.an('array');",
                  "});",
                  "",
                  "// 2. Validate Valid Transactions",
                  "pm.test(\"Valid transactions meet criteria\", function () {",
                  "    jsonData.valid.forEach((item, index) => {",
                  "        // Ensure values are numbers (doubles) [cite: 307]",
                  "        pm.expect(item.amount).to.be.a('number');",
                  "        pm.expect(item.ceiling).to.be.a('number');",
                  "        pm.expect(item.remanent).to.be.a('number');",
                  "",
                  "        // Business Rule: Ceiling must be a multiple of 100 [cite: 13, 224]",
                  "        pm.expect(item.ceiling % 100).to.equal(0, `Index ${index}: Ceiling ${item.ceiling} is not a multiple of 100`);",
                  "        ",
                  "        // Ensure no negatives in valid list [cite: 303, 305]",
                  "        pm.expect(item.amount).to.be.at.least(0, `Index ${index}: Valid item cannot have negative amount`);",
                  "    });",
                  "});",
                  "",
                  "// 3. Validate Invalid Transactions and Error Messages",
                  "pm.test(\"Invalid transactions report correct error\", function () {",
                  "    jsonData.invalid.forEach((item, index) => {",
                  "        // Must contain the message field [cite: 308, 309]",
                  "        pm.expect(item).to.have.property('message').that.is.a('string');",
                  "        ",
                  "        // Check for specific negative amount error message [cite: 305]",
                  "        if (item.amount < 0) {",
                  "            pm.expect(item.message).to.equal(\"Negative amounts are not allowed\");",
                  "        }",
                  "    });",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
